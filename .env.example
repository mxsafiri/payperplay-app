# ── Database (Neon PostgreSQL) ──
DATABASE_URL=postgresql://user:password@host/dbname?sslmode=require

# ── App URL (use https:// in production for webhooks to work) ──
NEXT_PUBLIC_APP_URL=http://localhost:3000
# Production: NEXT_PUBLIC_APP_URL=https://www.payperplay.xyz

# ── Better Auth ──
BETTER_AUTH_SECRET=generate-with-openssl-rand-base64-32

# ── OAuth (optional — leave empty to disable) ──
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# ── Cloudflare R2 (Video Storage) ──
R2_ACCOUNT_ID=your_cloudflare_account_id
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_BUCKET_NAME=payperplay

# ── Payment Provider (Snippe) ──
# Set to 'snippe' for production, 'mock' for testing
PAYMENT_PROVIDER=snippe
PAYMENT_API_KEY=your_snippe_api_key
# Optional — only if Snippe provides a webhook signing secret
PAYMENT_WEBHOOK_SECRET=

# ── nTZS Wallet-as-a-Service ──
NTZS_API_KEY=ntzs_test_your_api_key_here
NTZS_BASE_URL=https://www.ntzs.co.tz

# ── Admin (for one-time migration endpoints) ──
ADMIN_SECRET=generate-a-random-secret-here
