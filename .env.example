# ── Database (Neon PostgreSQL) ──
DATABASE_URL=postgresql://user:password@host/dbname?sslmode=require

# ── App URL ──
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ── Better Auth ──
BETTER_AUTH_SECRET=generate-with-openssl-rand-base64-32

# ── OAuth (optional — leave empty to disable) ──
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# ── Payment Provider (Snippe) ──
# Set to 'snippe' for production, 'mock' for testing
PAYMENT_PROVIDER=snippe
PAYMENT_API_KEY=your_snippe_api_key
# Optional — only if Snippe provides a webhook signing secret
PAYMENT_WEBHOOK_SECRET=
